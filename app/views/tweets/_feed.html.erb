<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
         <img src="https://bulma.io/images/placeholders/64x64.png" >
        </p>
      </figure>
      <div class="media-content">
        <%= render "form" %>
      </div>
    </article>
  <% end %>

  <% @tweets.each do |tweet| %>
    <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png" >
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= tweet.user.name %></strong>
          <small>@<%= tweet.user.username %></small>
          <p>
            <%= tweet.tweet %>
          </p>
        </div>
        <% if user_signed_in? %>
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to tweet, class: "level-item" do %>
                <span class="icon">
                  <i class="fa fa-link" aria-hidden="true" ></i>
                </span>
              <% end %>
              <% if tweet.user.username == current_user.username %>
                
              <%= link_to edit_tweet_path tweet, class: "level-item" do %>
                <span class="icon">
                  <i class="fa fa-pencil" aria-hidden="true" ></i>
                </span>
              <% end %>
              <%= link_to tweet, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this tweet?"} do %>
                <span class="icon">
                  <i class="fa fa-trash-o" aria-hidden="true" ></i>
                </span>
              <% end %>
              <% end %>
            </div>
          </nav>
        <% end %>
      </div>
    </article>
    </div>
  <% end %>
</div>